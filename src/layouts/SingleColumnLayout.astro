---
import type { NavigationProps } from "@components/Navigation.astro";
import BasicLayout, { type MetaContent } from "@layouts/BasicLayout.astro";

type Props = MetaContent &
    NavigationProps & {
        class?: string;
    };

const { class: className = "", ...basicLayoutProps } = Astro.props;
---

<BasicLayout {...basicLayoutProps}>
    <div class={"mx-auto px-4 lg:px-16" + ` ${className} `}>
        <slot />
    </div>
</BasicLayout>
