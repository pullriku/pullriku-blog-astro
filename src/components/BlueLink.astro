---
// 青色の四角形のリンク

type Props = {
    text: string;
    href: string;
};

const { text, href } = Astro.props;
---

<a
    href={href}
    class="mt-8 inline-block w-fit rounded-lg bg-blue-700 px-5 py-2.5 text-sm font-medium text-white shadow-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 focus:outline-none dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
>
    {text}
</a>
