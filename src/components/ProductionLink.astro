---
import { ICON_GITHUB } from "@lib/consts";
import OverlayBox from "@layouts/OverlayBox.astro";
import ServiceIcon from "@components/ServiceIcon.astro";

type Props = {
    href: string;
    title: string;
    desc: string;
    iconName?: string;
    iconDesc?: string;
    keywords?: string[];
};

const {
    href,
    title,
    desc,
    iconName = ICON_GITHUB,
    iconDesc = "GitHub",
    keywords = [],
} = Astro.props;
---
    <a target="_blank" href={href}>
        <OverlayBox class="h-full flex flex-col justify-between">
            <div class="flex flex-row gap-4 items-center">
                <div class="flex flex-col">
                    <h3 class="hover:underline">{title}</h3>
                    <p>{desc}</p>
                </div>
            </div>
            <div class="align-bottom">
                {
                    keywords.length > 0 && (
                        <p class="text-gray-700 dark:text-gray-300">
                            キーワード: 
                            {
                                keywords.join(", ") 
                            }
                        </p>
                    )
                }
                <p class="flex flex-row gap-2"><ServiceIcon name={iconName} />{iconDesc}</p>
            </div>
        </OverlayBox>
    </a>
</div>
